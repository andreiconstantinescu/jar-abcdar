lfa-framework()
body
  font-family: sans-serif
  ul,li,p
    text-align: justify
    font-size: 1em
  .yellowbox
    background-color: rgb(255,248,174)
    &.info
      position: relative
      margin 1em
      margin-top 3em
      padding-right 3em
      img
        position: absolute
        height: 50px
        width: 50px
        left: 93%
        bottom: 93%
  .bluebox
    background-color: rgb(158,214,244)
  .yellowbox, .bluebox
    border-radius: 10px
    padding: 1em
    margin-top: .5em
    margin-bottom: .5em
    p
      margin 0
      font-size: .9em
  .title
    font-family: sans-serif
    font-weight: 700
    color: rgb(244,117,33)
  .bluetitle
    position: relative
    height: auto
    margin 1em
    width: auto
    img, span
      display: inline-block
    span
      position: absolute
      top: 10%
      margin-left: .5em
      height: auto
      width: auto
    img
      height: 70px
      width: 70px
    h4
      margin 0
      color: rgb(37,63,142)
      font-size: 1.3em
      font-family: serif
    h6
      margin 0
      font-weight: 500
  table
    font-size: .9em
    border-collapse: collapse
    margin .5em
    th,td
      padding: .5em
      text-align: center
      font-weight: 300
    thead
      background-color: #333
      color: white
      td:not(:last-child), th:not(:last-child)
        border-right: 1px solid white
    tbody
      tr
        &:nth-child(odd)
          background-color: rgb(255,248,174)
          td:not(:last-child), th:not(:last-child)
            border-right: 1px solid white
        &:nth-child(even)
          background-color: #ddd
          td:not(:last-child), th:not(:last-child)
            border-right: 1px solid white